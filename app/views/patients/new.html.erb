<%= form_for(@patient) do |f| %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :password %><br>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation %><br>
		<%= f.password_field :password_confirmation %>
	</p>
	<p>
		<%= f.label :age %><br>
		<%= f.number_field :age %>
	</p>
	<p>
		<%= f.label :weight %><br>
		<%= f.number_field :weight %>
	</p>
	<p>
		<%= f.label :weight_goal %><br>
		<%= f.number_field :weight_goal %>
	</p>
	<p>
		<%= f.label :height %><br>
		<%= f.number_field :height %>
	</p>
	<p>
		<%= f.submit "Sign up" %>
	</p>
<% end %>